<div>
  <h4>注文履歴一覧</h4>
  <table>
    <thead>
      <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
      <tr>
        <td><%= link_to order.created_at.strftime("%-Y/%-m/%-d %-H:%-M:%-S"), order_path(order.id) %></td>
        <td><%= order.customer.last_name + order.customer.first_name %></td>
          <% order.order_details.each do |order_detail| %>
          <% @total += order_detail.amount %></br>
          <% end %>
        <td><%= @total %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%= paginate @orders %>
