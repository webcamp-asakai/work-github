<div class="container">
  <div class="row">
    <div class="mx-auto">
      <h2>管理者ログイン</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field m-3">
          <%= f.label :"メールアドレス" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field m-3">
          <%= f.label :"パスワード" %><br />
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>

        <div class="actions">
          <%= f.submit "ログイン", class:"btn btn-primary px-3 m-5" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

      <%= render "admin/shared/links" %>
