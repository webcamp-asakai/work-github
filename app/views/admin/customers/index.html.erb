<div>
  <h4>会員一覧</h4>
  <table>
    <thead>
      <tr>
        <th>会員ID</th>
        <th>氏名</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @customers.each do |customer| %>
      <tr>
        <th><%= customer.id %></th>
        <th><%= link_to (customer.last_name)+(customer.first_name), admin_customer_path(customer.id) %></th>
        <th><%= customer.email %></th>
        <% if customer.is_deleted == false %>
          <th><%= "有効" %></th>
        <% else %>
          <th><%= "無効" %></th>
        <% end %>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%= paginate @customers %>