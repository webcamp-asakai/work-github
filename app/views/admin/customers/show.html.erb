<div>
  <h4><%= @customer.last_name %> <%= @customer.first_name %>さんの会員詳細</h4>
  <table>
    <tbody>
      <tr>
        <th>会員ID</th>
        <th><%= @customer.id %></th>
      </tr>
      <tr>
        <th>氏名</th>
        <th><%= @customer.last_name %> <%= @customer.first_name %></th>
      </tr>
      <tr>
        <th>フリガナ</th>
        <th><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></th>
      </tr>
      <tr>
        <th>郵便番号</th>
        <th><%= @customer.postal_code %></th>
      </tr>
      <tr>
        <th>住所</th>
        <th><%= @customer.address %></th>
      </tr>
      <tr>
        <th>電話番号</th>
        <th><%= @customer.telephone_number %></th>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <th><%= @customer.email %></th>
      </tr>
      <tr>
        <th>会員ステータス</th>
        <% if @customer.is_deleted == false %>
          <th><%= "有効" %></th>
        <% else %>
          <th><%= "退会" %></th>
        <% end %>
      </tr>
    </tbody>
  </table>
  <%= link_to "編集する", edit_admin_customer_path(@customer.id) %>
  <%= link_to "注文履歴一覧をみる" %>
</div>