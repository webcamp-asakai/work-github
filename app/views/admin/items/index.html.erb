<div>
  <h4>商品一覧</h4>
  <%= link_to "+", new_admin_item_path %>
  <table>
    <thead>
      <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
      </tr>
    </thead>
    <tbody>
      <% @items.each do |item| %>
      <tr>
        <td><%= item.id %></td>
        <td><%= link_to item.name, admin_item_path(item.id) %></td>
        <td><%= item.price.to_s(:delimited) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%= paginate @items %>