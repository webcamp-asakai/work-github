
<div>
  <h4>商品一覧</h4>
  <table>
    <thead>
      <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
      </tr>
    </thead>
    <tbody>
      <% @items.each do |item| %>
      <tr>
        <th><%= item.id %></th>
        <th><%= link_to item.name, admin_item_path(item.id) %></th>
        <th><%= item.price.to_s(:delimited) %></th>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%= paginate @items %>