
<div>
  <h4>商品詳細</h4>
  <%= image_tag @item.image %>
  <table>
    <tbody>
      <tr>
        <th>商品名</th>
        <th><%= @item.name %></th>
      </tr>
      <tr>
        <th>商品説明</th>
        <th><%= @item.introduction %></th>
      </tr>
      <tr>
        <th>税込価格</br>(税抜価格)</th>
        <th><%= @item.add_tax_price.to_s(:delimited) %>(<%= @item.price.to_s(:delimited) %>)</th>
      </tr>
    </tbody>
  </table>
  <%= link_to "編集する", edit_admin_item_path(@item.id) %>
</div>