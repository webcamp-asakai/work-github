<div class="container">
  <div class="row">
    <div class="mx-auto">
      <h2 class="m-5">商品編集</h2>
      <%= form_with model: @item, url: admin_item_path, method: :patch do |f| %>
        <%= f.label :"商品画像" %>
        <%= f.file_field :image, accept: "image/*" %></br>
        <%= f.label :"商品名" %>
        <%= f.text_field :name %></br>
        <%= f.label :"商品紹介" %>
        <%= f.text_area :introduction %></br>
        <%= f.label :"税抜価格" %>
        <%= f.text_field :price %></br>
        <%= f.submit '変更を保存', class:"btn btn-primary px-3 m-5" %>
      <% end %>
    </div>
  </div>
</div>