<div>
  <h4>マイページ</h4>
  <h4>登録情報</h4><%= link_to "編集する", edit_customer_path(current_customer) %>
  <table>
    <tbody>
      <tr>
        <th>氏名</th>
        <th><%= @customer.last_name %> <%= @customer.first_name %></th>
      </tr>
      <tr>
        <th>フリガナ</th>
        <th><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></th>
      </tr>
      <tr>
        <th>郵便番号</th>
        <th><%= @customer.postal_code %></th>
      </tr>
      <tr>
        <th>住所</th>
        <th><%= @customer.address %></th>
      </tr>
      <tr>
        <th>電話番号</th>
        <th><%= @customer.telephone_number %></th>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <th><%= @customer.email %></th>
      </tr>
    </tbody>
  </table>
  <%= link_to "注文履歴一覧をみる", orders_path %>
</div>


