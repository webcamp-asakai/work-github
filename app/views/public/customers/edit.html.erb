<div class="container">
  <div class="row">
    <div class="mx-auto">
      <h4>会員情報編集</h4>

      <%= form_with model: @customer, url: customer_path, method: :patch do |f| %>

        <div class="field m-3">
          <%= f.label :"氏名" %>
          <%= f.text_field :last_name, autofocus: true %>
          <%= f.text_field :first_name %>
        </div>

        <div class="field m-3">
          <%= f.label :"フリガナ" %>
          <%= f.text_field :last_name_kana %>
          <%= f.text_field :first_name_kana %>
        </div>

        <div class="field m-3">
          <%= f.label :"郵便番号" %>
          <%= f.text_field :postal_code %>
        </div>

        <div class="field m-3">
          <%= f.label :"住所" %>
          <%= f.text_field :address %>
        </div>

        <div class="field m-3">
          <%= f.label :"電話番号" %>
          <%= f.text_field :telephone_number %>
        </div>

        <div class="field m-3">
          <%= f.label :"メールアドレス" %>
          <%= f.email_field :email %>
        </div>

        <div class="actions">
          <%= f.submit "編集内容を保存", class:"btn btn-primary px-3" %>
        </div>
      <% end %>
      <%= link_to "退会する", '/customers/current_customer/confirm_withdraw', class:"btn btn-danger px-3 m-5" %>
    </div>
  </div>
</div>

