<div class="container">
  <div class="row">
    <div class="col-lg-9 mr-auto">
      <h4 class="bg-light col-lg-3 m-5">新規会員登録</h4>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>

      <div class="d-flex mb-3">
        <p class="col-lg-3">名前</p>
        <div class="flex-fill">
          <%= f.label :"(姓)　" %>
          <%= f.text_field :last_name, autofocus: true, placeholder: "令和" %>
        </div>
        <div class="flex-fill">
          <%= f.label :"(名)　" %>
        　<%= f.text_field :first_name, placeholder: "道子" %>
      　</div>
      </div>

      <div class="d-flex mb-3">
        <p class="col-lg-3">フリガナ</p>
        <div class="flex-fill">
          <%= f.label :"(セイ)" %>
          <%= f.text_field :last_name_kana, placeholder: "レイワ" %>
        </div>
        <div class="flex-fill mb-3">
          <%= f.label :"(メイ)" %>
        　<%= f.text_field :first_name_kana, placeholder: "ミチコ" %>
        </div>
      </div>

      <div class="d-flex mb-3">
        <p class="col-lg-3">メールアドレス</p>
        <div class="flex-fill">
          <%= f.email_field :email, autocomplete: "email", placeholder: "sample@example.com", class:"col-lg-5" %>
        </div>
      </div>

      <div class="d-flex mb-3">
        <p class="col-lg-3">郵便番号(ハイフンなし)</p>
        <div class="flex-fill">
          <%= f.text_field :postal_code, placeholder: "0000000", class:"col-lg-5" %>
        </div>
      </div>

      <div class="d-flex mb-3">
        <p class="col-lg-3">住所</p>
        <div class="flex-fill">
          <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", class:"col-lg-9" %>
        </div>
      </div>

      <div class="d-flex mb-3">
        <p class="col-lg-3">電話番号(ハイフンなし)</p>
        <div class="flex-fill">
          <%= f.text_field :telephone_number, placeholder: "0000000000", class:"col-lg-5" %>
        </div>
      </div>

      <div class="d-flex mb-3">
        <p class="col-lg-3">パスワード(6文字以上)</p>
        <div class="flex-fill">
          <%= f.password_field :password, autocomplete: "new-password", class:"col-lg-5" %>
        </div>
      </div>

      <div class="d-flex mb-3">
        <p class="col-lg-3">パスワード(確認用)</p>
        <div class="flex-fill">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"col-lg-5" %>
        </div>
      </div>

      <div class="actions">
        <div class="d-flex justify-content-center">
          <%= f.submit "新規登録", class:"btn btn-success px-5" %>
        </div>
      </div>
      <% end %>
    </div>
    <div>
    <h4 class="bg-light m-5">既に登録済みの方</h4>
    <p class="ml-5">
      <%= link_to "こちら", new_customer_session_path %>からログインしてください。
    </p>
    </div>
  </div>
</div>
