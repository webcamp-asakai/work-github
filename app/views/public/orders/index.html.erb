<%= "注文履歴一覧" %>
  <table>
    <thead>
      <tr>
        <th>注文日</th>
        <th>配送先</th>
        <th>注文商品</th>
        <th>支払金額</th>
        <th>注文詳細</th>
      </tr>
    </thead>
    <tbody>
      <% @order.each do |order| %>
      <tr>
        <td><%= order.created_at %></td>
        <td>
          <%= order.delivery_postal_code %></br>
          <%= order.delivery_address %></br>
          <%= order.delivery_name %>
        </td>
        <td><%= order.item.name %></td>
        <td><%= order.payment_including_tax.to_s(:delimited) %>円</td>
        <td><%= link_to "表示する", order_path(order.id) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>