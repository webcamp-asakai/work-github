<div class="container">
  <div class="row">
    <h4 class="bg-light col-lg-3">ショッピングカート</h4>
    <div class="ml-auto">
      <%= link_to "カートを空にする", destroy_all_path, method: :delete, data: { confirm: "本当に空にしますか？" } %>
    </div>
    <table class="table table-bordered mx-auto">
      <thead class="thead-light">
        <tr>
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @cart_items.each do |cart_item| %>
        <tr>
          <td>
            <%= image_tag cart_item.item.get_image(100,100) %>
            <%= cart_item.item.name %>
          </td>
          <td><%= cart_item.item.price.to_s(:delimited) %></td>
          <td>
            <%= form_with model: @cart_item, url: cart_item_path(cart_item.id), method: :patch do |f| %>
              <%= f.select :amount, options_for_select(*[1..3], {selected: cart_item.amount.to_i}) %>

                <%= f.submit '変更' %>
              <% end %>
          </td>
          <td><%= cart_item.subtotal.to_s(:delimited) %></td>
          <td><%= link_to "削除する", destroy_cart_item_path(cart_item.id), method: :delete, data: { confirm: "本当に削除しますか？" }, class:"btn btn-danger" %></td>
          <% (@total += cart_item.subtotal).to_s(:delimited) %>
        </tr>
        <% end %>
      </tbody>
    </table>
    <div class="dflex align_items_end">
      <%= link_to "買い物を続ける", items_path, class:"btn btn-success" %>
    </div>
    <table class="table-bordered offset-lg-2">
        <tr>
          <td>合計金額</td>
          <td><%= @total.to_s(:delimited) %></td>
        </tr>
    </table>
    <div class="mx-auto">
      <%= link_to "情報入力に進む", new_order_path, class:"btn btn-primary" %>
    </div>
  </div>
</div>